{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <div class="max-w-xl mx-auto">
            <h1 class="mb-6 text-center text-2xl font-bold tracking-tight">Sign in</h1>
            
            <form method="post">
                
                <div class="mb-2">
                    <label for="inputEmail" class="block text-xs text-blue-700 mb-1">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="border border-2 rounded-sm border-blue-200 p-2 w-full" required autofocus>
                </div>

                <div class="mb-2">
                    <label for="inputPassword" class="block text-xs text-blue-700 mb-1">Password</label>
                    <input type="password" name="password" id="inputPassword" class="border border-2 rounded-sm border-blue-200 p-2 w-full" required>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            

                <button class="px-3 py-1 mr-2 bg-blue-600 text-blue-100 text-sm border border-blue-600 rounded-sm hover:bg-blue-700" type="submit">
                    Sign in
                </button>
            </form>
        </div>
    {% endif %}
{% endblock %}
