{% extends "base.html.twig" %}

{% block body %}
<section>
    <h2 class="text-2xl font-semibold tracking-tight mb-6">Newest questions</h2>
    
    <ul>
        {% if questions|length > 0 %}
            {% for question in questions %}
                <li class="py-4 border-b border-gray-200 flex">

                    <span class="flex items-center flex-col justify-center px-6">
                        <span class=" font-bold text-blue-200 text-4xl">{{ question.answers|length }}</span>
                        <span class="text-xs text-blue-300">answers</span>
                    </span>

                    <div>
                        <a 
                            href="{{ path('questions.show', { slug: question.slug }) }}"
                            class="text-blue-600 text-lg font-semibold tracking-tight block mb-2"    
                        >{{ question.title }}</a>
                        <p class="text-base text-gray-700 tracking-tight mb-2">{{ question.getExcerpt() }}</p>
                        <a 
                            href="{{ path('questions.show', { slug: question.slug }) }}"
                            class="text-sm underline text-gray-500 hover:text-black"
                        >read full question</a>
                    </div>
                </li>
            {% endfor %}
        {% else %}
            <p class="text-gray-700 text-sm">No questions at the moment...</p>
        {% endif %}
    </ul>

</section>
{% endblock %}